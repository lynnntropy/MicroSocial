<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                xmlns:fbutton="http://schemas.android.com/apk/res-auto"
                xmlns:wheel="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:id="@+id/main_toolbar"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:minHeight="50dp"
                                       android:background="#3F51B5"
                                       app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                       app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                                       android:layout_alignParentTop="true"
                                       android:layout_alignParentLeft="true"
                                       android:layout_alignParentStart="true"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/main_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/primary_blue"
        android:id="@+id/relativeLayout2"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current hotspot"
            android:textColor="@color/text_color_white"
            android:id="@+id/currentHotspotLabel"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotspot Name"
            android:textColor="@color/text_color_white"
            android:id="@+id/currentHotspotName"
            android:textSize="20dp"
            android:layout_below="@+id/currentHotspotLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/changeHotspot"
            android:layout_width="150dp"
            android:layout_height="40dp"

            fbutton:buttonColor="@color/text_color_white"
            android:text="Change hotspot"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/primary_blue"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Network"
            android:id="@+id/fullName"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textColor="#ffeaeff8"/>
    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/networkList"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout2"/>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/spinner"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        wheel:barColor="#5588FF"
        wheel:progressIndeterminate="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scanning host 5 of 254"
        android:id="@+id/hostNumber"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Networks found: 0"
        android:id="@+id/networksFound"
        android:layout_below="@+id/hostNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/stopScanning"
        android:layout_width="140dp"
        android:layout_height="35dp"

        fbutton:buttonColor="@color/primary_blue"
        android:text="Stop scanning"
        android:layout_below="@+id/networksFound"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>