<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:id="@+id/main_toolbar"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:minHeight="50dp"
                                       android:background="#3F51B5"
                                       app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                       app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                                       android:layout_alignParentTop="true"
                                       android:layout_alignParentLeft="true"
                                       android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You don't have this user in your contacts, or they didn't supply a phone number to the network. Here's what we know about them:"
        android:id="@+id/userActivityDisclaimer"
        android:layout_below="@+id/main_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:textSize="15dp"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Username"
    android:id="@+id/userNameLabel"
    android:layout_below="@+id/userActivityDisclaimer"
    android:layout_alignLeft="@+id/userActivityDisclaimer"
    android:layout_alignStart="@+id/userActivityDisclaimer"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="omegavesko"
        android:id="@+id/userName"
        android:layout_below="@+id/userNameLabel"
        android:layout_alignLeft="@+id/userNameLabel"
        android:layout_alignStart="@+id/userNameLabel"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:id="@+id/fullNameLabel"
        android:layout_below="@+id/userName"
        android:layout_alignLeft="@+id/userName"
        android:layout_alignStart="@+id/userName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veselin RomiÄ‡"
        android:id="@+id/fullName"
        android:layout_below="@+id/fullNameLabel"
        android:layout_alignLeft="@+id/fullNameLabel"
        android:layout_alignStart="@+id/fullNameLabel"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:id="@+id/phoneNumberLabel"
        android:layout_below="@+id/fullName"
        android:layout_alignLeft="@+id/fullName"
        android:layout_alignStart="@+id/fullName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="381605228688"
        android:id="@+id/phoneNumber"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/phoneNumberLabel"
        android:layout_alignLeft="@+id/phoneNumberLabel"
        android:layout_alignStart="@+id/phoneNumberLabel"/>

</RelativeLayout>